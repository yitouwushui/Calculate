<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|right"
        android:text=""
        android:textSize="30sp"
        app:layout_column="0"
        app:layout_columnSpan="4"
        app:layout_row="0"
        app:layout_rowWeight="6" />

    <Button
        android:id="@+id/button_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="√"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="1" />


    <Button
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="1"
        android:id="@+id/button_21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="^" />

    <Button
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="1"
        android:id="@+id/button_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="sin()" />

    <Button
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="1"
        app:layout_rowWeight="1"
        android:id="@+id/button_23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="cos()" />

    <Button
        android:id="@+id/button_19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="("
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text=")"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showResult"
        android:text="←"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showResult"
        android:text="C"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="7"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowWeight="1" />
    <Button
        android:id="@+id/button_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="8"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="9"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="/"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="3"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="4"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="4"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="5"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="4"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="6"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="4"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="*"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="4"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="1"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_row="5"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="2"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_row="5"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="3"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="5"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="-"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="5"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="0"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_row="6"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="."
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_row="6"
        app:layout_rowWeight="1" />

    <Button
        android:id="@+id/button_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getParam"
        android:text="+"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_row="6"
        app:layout_rowSpan="2"
        app:layout_rowWeight="2" />

    <Button
        android:id="@+id/button_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showResult"
        android:text="="
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_columnWeight="1"
        app:layout_row="7"
        app:layout_rowWeight="1" />
</android.support.v7.widget.GridLayout>